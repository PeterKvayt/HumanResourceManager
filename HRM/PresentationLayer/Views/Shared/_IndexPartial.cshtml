
@{
    Layout = "_Layout";
    ViewBag.PageTitle = ViewBag.Title;
}

<div class="row">
    <p class="col-lg-12 col-md-12 col-sm-12">
        <a class="btn btn-primary" asp-controller="@ViewBag.Controller" asp-action="Create">
            @ViewBag.CreateButtonName
        </a>
    </p>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <table class="table table-striped">
            @RenderBody()
        </table>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="deletion-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-warning">
            <div class="modal-header">
                <h4 class="modal-title">Удаление</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <h5>
                    <strong>@ViewBag.DeleteAlert</strong>
                </h5>
                <br />
                <h5>
                    <small>Все данные будут безвозвратно утеряны!</small>
                </h5>
                <br />
                <h5>
                    <strong>Вы уверены?</strong>
                </h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Отмена</button>
                <a class='btn btn-danger' href="#">Подтвердить</a>
            </div>
        </div><!-- /.модал-контент -->
    </div><!-- /.модальное окно -->
</div><!-- /.модальные -->

@section Scripts{
    @foreach (var item in @ViewBag.Scripts)
    {
        <script src="@item"></script>
    }
}

@model PresentationLayer.ViewModels.ActivityTypeViewModel

@{
    Layout = "_CreateUpdateLayout";
    string title = "Изменение вида деятельности";
    ViewBag.Title = title;
    ViewBag.ActionName = title + ":";
    ViewBag.ItemName = Model.ActivityTypeModel.Name;
    ViewBag.AspController = "ActivityTypes";
    ViewBag.AspAction = "Update";
    ViewBag.AcceptButtonName = "Сохранить изменения";
    ViewBag.AlertMessage = "Введите название вида деятельности компании!";
    ViewBag.Scripts = new string[]
    {
        "/lib/js/alerts.js"
    };
}

<div class="form-group">
    <label asp-for="ActivityTypeModel.Name" class="control-label">Название вида деятельности</label>
    <input maxlength="50" required asp-for="ActivityTypeModel.Name" value="@Model.ActivityTypeModel.Name" class="form-control input-form select-form" />
    <input asp-for="ActivityTypeModel.Id.Identifier" value="@Model.ActivityTypeModel.Id.Identifier" style="display:none;" />
</div>


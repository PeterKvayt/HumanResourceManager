@model PresentationLayer.ViewModels.ActivityTypeViewModel

@{
    ViewData["Title"] = "Изменение вида деятельности компании";
}

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-1"></div>
    <div class="col-lg-6 col-md-6 col-sm-10">
        <h5><strong>Изменение вида деятельности компании:</strong> @Model.ActivityType.Name</h5>
        <form method="post" asp-controller="ActivityTypes" asp-action="Update">
            <div class="form-group">
                <label asp-for="ActivityType.Name" class="control-label">Вид деятельности</label>
                <input maxlength="50" required asp-for="ActivityType.Name" value="@Model.ActivityType.Name" class="form-control input-form select-form" />
                <input asp-for="ActivityType.Id.Identificator" value="@Model.ActivityType.Id.Identificator" style="display:none;" />
            </div>
            <div class="form-group">
                <input id="submit-btn" type="submit" style="display:none;" />
            </div>
        </form>

        <button id="ok-btn" class="btn btn-primary">Изменить</button>
        <a asp-controller="ActivityTypes" asp-action="Index" class="btn btn-danger">Отмена</a>
        <br />
        <br />
        <div id="warning-alert" class="alert alert-warning .alert-dismissible" role="alert" style="display: none;">
            <button id="close-warning" type="button" class="close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Введите название вида деятельности компании!</strong>
        </div>

    </div>
</div>

@section Scripts{
    <script src="~/lib/js/alerts.js"></script>
}

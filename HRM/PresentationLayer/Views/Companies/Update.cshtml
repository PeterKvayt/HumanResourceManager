@model PresentationLayer.ViewModels.CompanyViewModel

@{
    Layout = "_CreateUpdateTemplate";
    string title = "Изменение компании";
    ViewBag.Title = title;
    ViewBag.ActionName = title + ":";
    ViewBag.ItemName = Model.CompanyModel.Name;
    ViewBag.AspController = "Companies";
    ViewBag.AspAction = "Update";
    ViewBag.AcceptButtonName = "Сохранить изменения";
    ViewBag.AlertMessage = "Заполните все поля!";
    ViewBag.Scripts = new string[]
    {
        "/lib/js/alerts.js"
    };
}

<input required asp-for="CompanyModel.Id.Identifier" value="@Model.CompanyModel.Id.Identifier" style="display:none;" />

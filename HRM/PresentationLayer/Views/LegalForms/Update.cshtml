@model PresentationLayer.ViewModels.LegalFormViewModel

@{
    Layout = "_CreateUpdateTemplate";
    string title = "Изменение организационно-правовой формы";
    ViewBag.Title = title;
    ViewBag.ActionName = title + ":";
    ViewBag.ItemName = Model.LegalFormModel.Name;
    ViewBag.AspController = "LegalForms";
    ViewBag.AspAction = "Update";
    ViewBag.AcceptButtonName = "Сохранить изменения";
    ViewBag.AlertMessage = "Введите название организационной-правовой формы!";
    ViewBag.Scripts = new string[]
    {
"/lib/js/alerts.js"
    };
}

<input maxlength="50" required asp-for="LegalFormModel.Name" value="@Model.LegalFormModel.Name" class="form-control input-form select-form" />
<input asp-for="LegalFormModel.Id.Identifier" value="@Model.LegalFormModel.Id.Identifier" style="display:none;" />

